<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroud</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroud</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonTheme" parent="">
        <item name="colorControlNormal">@color/ControlNormal</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/TextSecondary</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="PrimaryTextHilight">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SecondaryTextHilight">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/TextSecondaryHilight</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="FilterText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">@dimen/list_item_min_height</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="MenuHeaderText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MenuItemText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/TextSecondary</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ListHeaderText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">@dimen/list_item_min_height</item>
    </style>

    <style name="ListItemText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/TextSecondary</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">@dimen/list_item_min_height</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/nav_divider_color</item>
    </style>

    <style name="VerticalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/nav_divider_color</item>
    </style>
</resources>
