<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dialog_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="Courier Name:" />

        <Spinner
            android:id="@+id/spn_courier"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:padding="5dp"
            android:spinnerMode="dropdown"
            android:theme="@style/ButtonTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="Date :" />

        <TextView
            android:id="@+id/et_date"
            style="@style/SecondaryTextHilight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_margin="5dp"
            android:layout_weight=".7"
            android:drawableRight="@drawable/ic_action_date"
            android:singleLine="true"
            android:text="Courier Date" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="AWB No:" />

        <EditText
            android:id="@+id/etxAWBillNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
            android:imeOptions="actionNext"
            android:maxLength="16"
            android:singleLine="true"
            android:theme="@style/ButtonTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="Mode :" />

        <Spinner
            android:id="@+id/mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:spinnerMode="dropdown"
            android:theme="@style/ButtonTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="Packets :" />

        <EditText
            android:id="@+id/et_packets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="8"
            android:singleLine="true"
            android:theme="@style/ButtonTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="Weight :" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:singleLine="true"
            android:theme="@style/ButtonTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center|left"
            android:text="Send To :" />

        <Spinner
            android:id="@+id/sendto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:spinnerMode="dropdown"
            android:theme="@style/ButtonTheme" />
    </LinearLayout>


</LinearLayout>