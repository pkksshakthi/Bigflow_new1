<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtCustomerName"
                style="@style/PrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name" />

            <TextView
                android:id="@+id/txtEmployeeName"
                style="@style/SecondaryTextHilight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCustomerName"
                android:drawableLeft="@drawable/ic_action_person_20dp"
                android:gravity="center|left"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Employee Name" />

            <LinearLayout
                android:id="@+id/sr_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmployeeName"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtsch_type"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SChedule Type" />

                <TextView
                    android:id="@+id/txtsch_date"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SChedule Date" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sr_linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sr_linearlayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStatus"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SChedule Status" />

                <TextView
                    android:id="@+id/txtFollowupDate"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Followup Date" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtRemark"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sr_linearlayout1"
                android:text="Remark" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>