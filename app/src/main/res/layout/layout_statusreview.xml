<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtCustomerName"
                style="@style/PrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name" />

            <TextView
                android:id="@+id/txtEmployeeName"
                style="@style/SecondaryTextHilight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCustomerName"
                android:gravity="center|left"
                android:drawableLeft="@drawable/ic_action_person_20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Employee Name"/>

            <TextView
                android:id="@+id/txttype"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmployeeName"
                android:text="Date"
                android:layout_margin="3dp"/>


            <TextView
                android:id="@+id/txtfollowup"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmployeeName"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_action_list"
                android:text="Details"
                android:layout_margin="3dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>