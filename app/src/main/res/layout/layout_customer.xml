<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCustomerName"
                style="@style/PrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Customer Name" />

            <TextView
                android:id="@+id/txtLocationName"
                style="@style/SecondaryTextHilight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCustomerName"
                android:drawableLeft="@drawable/ic_action_location"
                android:gravity="center|left"
                android:paddingLeft="0dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Location Name" />

            <TextView
                android:id="@+id/txtVerticalLine"
                style="@style/VerticalLine"
                android:layout_below="@id/txtLocationName"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVerticalLine"
                android:layout_margin="5dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCustcomment"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_chat"
                    android:gravity="center|left"
                    android:text=" Comment"
                    android:tooltipText="Comment" />

                <TextView
                    android:id="@+id/txtCustHistory"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_history"
                    android:gravity="center|left"
                    android:text=" Visit" />

                <TextView
                    android:id="@+id/txtCustViewDetails"
                    style="@style/SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_list"
                    android:gravity="center|left"
                    android:text=" Details" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>