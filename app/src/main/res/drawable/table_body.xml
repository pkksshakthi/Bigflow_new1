    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"></padding>
            <stroke
                android:width="1dp"
                android:color="#f6f4f4" />
        </shape>
    </item>

</layer-list>
